{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "displayName": "organisation"
      },
      "name": "[concat(parameters('ApimServiceName'), '/organisation')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "publish"
      },
      "name": "[concat(parameters('ApimServiceName'), '/publish')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "registry"
      },
      "name": "[concat(parameters('ApimServiceName'), '/registry')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    }
  ]
}