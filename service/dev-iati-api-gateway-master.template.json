{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management"
      }
    },
    "ApimGatewayHostname": {
      "type": "string",
      "metadata": {
        "description": "Hostname of apim gateway instance"
      }
    },
    "Environment": {
      "type": "string",
      "metadata": {
        "description": "Environment thats being deployed to (e.g. dev or PROD)"
      }
    },
    "LinkedTemplatesBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated templates"
      }
    },
    "PolicyXMLBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains the generated policy files"
      }
    },
    "serviceUrl": {
      "type": "object",
      "metadata": {
        "description": "Service url for each Api"
      }
    },
    "NamedValues": {
      "type": "object",
      "metadata": {
        "description": "Named values"
      }
    },
    "ApiLoggerId": {
      "type": "object",
      "metadata": {
        "description": "LoggerId for this api"
      }
    },
    "LoggerResourceId": {
      "type": "object",
      "metadata": {
        "description": "ResourceId for the logger"
      }
    },
    "SubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "SubscriptionId for Azure"
      }
    },
    "ApimSKU": {
      "type": "string",
      "metadata": {
        "description": "SKU of the APIM Instance"
      }
    }
  },
  "resources": [
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-apim.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "ApimSKU": {
             "value": "[parameters('ApimSKU')]"
          },
          "ApimGatewayHostname": {
             "value": "[parameters('ApimGatewayHostname')]"
          }
        }
      },
      "name": "apimTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": []
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-namedValues.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "NamedValues": {
            "value": "[parameters('NamedValues')]"
          }
        }
      },
      "name": "namedValuesTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-globalServicePolicy.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "globalServicePolicyTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-products.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "productsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-tags.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "tagTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-backends.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "Environment": {
            "value": "[parameters('Environment')]"
          },
          "SubscriptionId": {
            "value": "[parameters('SubscriptionId')]"
          }
        }
      },
      "name": "backendsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-apis.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "serviceUrl": {
            "value": "[parameters('serviceUrl')]"
          },
          "ApiLoggerId": {
            "value": "[parameters('ApiLoggerId')]"
          }
        }
      },
      "name": "apisTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'globalServicePolicyTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'tagTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'backendsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-productAPIs.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          }
        }
      },
      "name": "productAPIsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apisTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/dev-iati-api-gateway-apiTags.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          },
          "serviceUrl": {
            "value": "[parameters('serviceUrl')]"
          },
          "ApiLoggerId": {
            "value": "[parameters('ApiLoggerId')]"
          }
        }
      },
      "name": "apiTagsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'tagTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apisTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'apimTemplate')]"
      ]
    }
  ]
}
