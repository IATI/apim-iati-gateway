{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "NotificationEmail": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/notifications",
      "apiVersion": "2021-01-01-preview",
      "name": "[concat(parameters('ApimServiceName'), '/RequestPublisherNotificationMessage')]"
    },
    {
      "type": "Microsoft.ApiManagement/service/notifications",
      "apiVersion": "2021-01-01-preview",
      "name": "[concat(parameters('ApimServiceName'), '/QuotaLimitApproachingPublisherNotificationMessage')]"
    },
    {
      "type": "Microsoft.ApiManagement/service/notifications/recipientEmails",
      "apiVersion": "2021-01-01-preview",
      "name": "[concat(parameters('ApimServiceName'), '/QuotaLimitApproachingPublisherNotificationMessage/', parameters('NotificationEmail'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/notifications', parameters('ApimServiceName'), 'QuotaLimitApproachingPublisherNotificationMessage')]"
      ]
    },
    {
      "type": "Microsoft.ApiManagement/service/notifications/recipientEmails",
      "apiVersion": "2021-01-01-preview",
      "name": "[concat(parameters('ApimServiceName'), '/RequestPublisherNotificationMessage/', parameters('NotificationEmail'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/notifications', parameters('ApimServiceName'), 'RequestPublisherNotificationMessage')]"
      ]
    }
  ]
}
