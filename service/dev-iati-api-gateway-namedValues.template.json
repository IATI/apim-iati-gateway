{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    },
    "NamedValues": {
      "type": "object"
    },
    "ApimDevPortalHostname": {
      "type": "string"
    },
    "Environment": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "tags": ["key", "function", "auto"],
        "secret": true,
        "displayName": "dev-func-validator-services-key",
        "keyVault": {
          "secretIdentifier": "https://kv-iati-dev.vault.azure.net/secrets/host--functionKey--default"
        }
      },
      "name": "[concat(parameters('ApimServiceName'), '/dev-func-validator-services-key')]",
      "type": "Microsoft.ApiManagement/service/namedValues",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "tags": ["key", "function", "auto"],
        "secret": true,
        "displayName": "func-iativalidator-dev-key",
        "keyVault": {
          "secretIdentifier": "https://kv-iati-dev.vault.azure.net/secrets/host--functionKey--default"
        }
      },
      "name": "[concat(parameters('ApimServiceName'), '/func-iativalidator-dev-key')]",
      "type": "Microsoft.ApiManagement/service/namedValues",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "tags": [],
        "secret": true,
        "displayName": "pw-solr-admin-PROD",
        "keyVault": {
          "secretIdentifier": "https://kv-iati-prod.vault.azure.net/secrets/pw-solr-admin-PROD"
        }
      },
      "name": "[concat(parameters('ApimServiceName'), '/pw-solr-admin-PROD')]",
      "type": "Microsoft.ApiManagement/service/namedValues",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "type": "Microsoft.ApiManagement/service/namedValues",
      "apiVersion": "2021-01-01-preview",
      "name": "[concat(parameters('ApimServiceName'), '/ApimDevPortalHostname')]",
      "properties": {
        "displayName": "ApimDevPortalHostname",
        "value": "[parameters('ApimDevPortalHostname')]",
        "tags": [],
        "secret": false
      }
    },
    {
      "type": "Microsoft.ApiManagement/service/namedValues",
      "apiVersion": "2021-01-01-preview",
      "name": "[concat(parameters('ApimServiceName'), '/Environment')]",
      "properties": {
        "displayName": "Environment",
        "value": "[parameters('Environment')]",
        "tags": [],
        "secret": false
      }
    }
  ]
}
