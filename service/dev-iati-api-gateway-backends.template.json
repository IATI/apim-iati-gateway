{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    },
    "Environment": {
      "type": "string"    
    },
    "SubscriptionId": {
      "type": "string"    
    }
  },
  "resources": [
    {
      "properties": {
        "description": "[concat(parameters('Environment'), '-func-validator-services')]",
        "resourceId": "[concat('https://management.azure.com/subscriptions/', parameters('SubscriptionId'), '/resourceGroups/', parameters('Environment'), '-func-validator-services/providers/Microsoft.Web/sites/' , parameters('Environment'), '-func-validator-services')]",
        "credentials": {
          "header": {
            "x-functions-key": [
              "[concat('{{', parameters('Environment'), '-func-validator-services-key}})]"
            ]
          }
        },
        "url": "[concat( 'https://', parameters('Environment'), '-func-validator-services.azurewebsites.net/api')]",
        "protocol": "http"
      },
      "name": "[concat(parameters('ApimServiceName'), '/', 'parameters('Environment'), '-func-validator-services')]",
      "type": "Microsoft.ApiManagement/service/backends",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "description": "func-iativalidator-dev",
        "resourceId": "https://management.azure.com/subscriptions/bcaf7a00-7a14-4932-ac41-7bb0dee0d2a9/resourceGroups/rg-iativalidator-dev/providers/Microsoft.Web/sites/func-iativalidator-dev",
        "credentials": {
          "header": {
            "x-functions-key": [
              "{{func-iativalidator-dev-key}}"
            ]
          }
        },
        "url": "https://func-iativalidator-dev.azurewebsites.net/api",
        "protocol": "http"
      },
      "name": "[concat(parameters('ApimServiceName'), '/func-iativalidator-dev')]",
      "type": "Microsoft.ApiManagement/service/backends",
      "apiVersion": "2021-01-01-preview"
    }
  ]
}